<html lang="en">
  <head>
    {{>headerLinks}}
  </head>
  <body>
    {{!-- navbar part  --}}

    {{>navbar}}

    <!-- main header  -->
    <div class="container-fluid main-header">
      <div class="row">
        <div class="col-md-10 col-12 mx-auto">
          <div class="row inner-row">
            <!-- left side div  -->
            <div class="col-lg-6 col-md-12 col-12 main-header-left">
              <p>Welcome to our app</p>
              <h1>Get The Latest <span>Weather</span> Of Your City</h1>
              <a href="/weather">
                <button>check now</button>
              </a>
            </div>
            <!-- right side div  -->
            <div class="col-lg-6 col-md-12 col-12 main-header-right">
              <div
                id="carouselExampleControls"
                class="carousel slide"
                data-bs-ride="carousel"
              >
                <div class="carousel-inner">
                  <div class="carousel-item active">
                    <img
                      src="images/weather-reporter.avif"
                      class="carousel-image"
                      alt="c1"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/summer.avif"
                      class="carousel-image"
                      alt="c2"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/rainy.jpg"
                      class="carousel-image"
                      alt="c3"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/winter.jpg"
                      class="carousel-image"
                      alt="c4"
                    />
                  </div>
                  <div class="carousel-item">
                    <img
                      src="images/autumn.jpg"
                      class="carousel-image"
                      alt="c5"
                    />
                  </div>
                </div>
                <button
                  class="carousel-control-prev"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="prev"
                >
                  <span
                    class="carousel-control-prev-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Previous</span>
                </button>
                <button
                  class="carousel-control-next"
                  type="button"
                  data-bs-target="#carouselExampleControls"
                  data-bs-slide="next"
                >
                  <span
                    class="carousel-control-next-icon"
                    aria-hidden="true"
                  ></span>
                  <span class="visually-hidden">Next</span>
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- footer part  -->
    {{>footer}}
  </body>
</html>